<div class="card">
  <div class="card-body">
    <h6 class="card-text"><%= competition.due_on %></h6>
    <h5 class="card-title"><%= link_to competition.name, competition_path(competition.id) %></h5>
    <h6 class="card-text"><%= competition.place %></h6>
    <table class="table table-bordered">
      <tbody>
        <% competition.matches.each do |match| %>
          <%= render 'match', match: match %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>